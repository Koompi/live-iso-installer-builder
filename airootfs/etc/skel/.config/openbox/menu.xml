<?xml version="1.0" encoding="utf-8"?>
<openbox_menu>
	<menu id="root-menu" label="OpenBox 3">
		<item label="Install KOSMOS OS">
			<action name="Execute">
				<execute>pkexec /usr/lib/calamares</execute>
			</action>
		</item>
		<item label="Installation Guide">
			<action name="Execute">
				<execute>firefox /home/user0/guide/index.html</execute>
			</action>
		</item>
		<item label="KOOMPI Website">
			<action name="Execute">
				<execute>firefox https://koompi.com</execute>
			</action>
		</item>
		<item label="KOSMOS Website">
			<action name="Execute">
				<execute>firefox https://kramaos.org</execute>
			</action>
		</item>
		<item label="Joing Telegram Community">
			<action name="Execute">
				<execute>firefox https://t.me/kramaos</execute>
			</action>
		</item>
		<separator/>
		<item label="Firefox">
			<action name="Execute">
				<execute>firefox</execute>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="Terminal">
			<action name="Execute">
				<execute>gnome-terminal</execute>
			</action>
		</item>
		<separator/>
		<item label="Shutdown">
			<action name="Execute">
				<execute>shutdown now -h</execute>
			</action>
		</item>
		<item label="Reboot">
			<action name="Execute">
				<execute>reboot</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
